{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description":
    "PIIredactyl - BuildLife @BUILD_NUMBER@ - Main template.",
  "Parameters": {
    "ServiceNameTag": {
      "Description": "The service name tag",
      "Type": "String",
      "Default": "piiredactyl"
    },
    "CFNEnvironment": {
      "Description": "uat/prod etc",
      "Type": "String",
      "AllowedValues": [
        "dev",
        "ci",
        "test",
        "perf",
        "uat",
        "staging",
        "prod"
      ],
      "Default": "dev"
    },
    "BuildNumber": {
      "Description": "Build number",
      "Type": "String",
      "Default": "000"
    },
    "ScriptURL": {
      "Description": "Glue Job Script",
      "Type": "String",
      "Default": "builder-cfn-templatex"
    }
  },
  "Resources": {
    "platformStack": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "TemplateURL": {
          "Fn::Join": [
            "",
            [
              "https://s3-eu-west-1.amazonaws.com/builder-cfn-templatex/templates/",
              {
                "Ref": "CFNEnvironment"
              },
              "/",
              {
                "Ref": "BuildNumber"
              },
              "/piiredactyl-platform.json"
            ]
          ]
        },
        "TimeoutInMinutes": 60,
        "Parameters": {
          "Environment": { "Ref": "CFNEnvironment" },
          "ServiceNameTag": { "Ref": "ServiceNameTag" },
	  "ScriptURL": { "Ref": "ScriptURL" },
          "IngestDataBucketName": {
            "Fn::Join": [
              "-",
              [
                {
                  "Ref": "ServiceNameTag"
                },
                {
                  "Ref": "CFNEnvironment"
                },
                "data-ingest"
              ]
            ]
          },
          "TransformDataBucketName": {
            "Fn::Join": [
              "-",
              [
                {
                  "Ref": "ServiceNameTag"
                },
                {
                  "Ref": "CFNEnvironment"
                },
                "data-transform"
              ]
            ]
          }
        }
      }
    }
  },
  "Outputs": {
    "platformStackRef": {
      "Value": {
        "Ref": "platformStack"
      }
    },
    "IngestDataBucket": {
      "Value": {
        "Fn::GetAtt": ["platformStack", "Outputs.IngestDataBucketRef"]
      }
    },
    "TransformDataBucket": {
      "Value": {
        "Fn::GetAtt": ["platformStack", "Outputs.TransformDataBucketRef"]
      }
    }
  }
}
